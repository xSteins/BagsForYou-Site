<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="/css/reset.css">
    <link rel="stylesheet" href="/css/default-styling.css">
    <link rel="stylesheet" href="/css/admin-styling.css">
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Rounded:opsz,wght,FILL,GRAD@48,400,1,0" />
    <link rel="stylesheet"
        href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@48,400,0,0" />


</head>

<body>
    <%- include('components/navigation/header-admin') %>

        <div class="main-grid-section">
            <div class="left-column">
                <div class="main-menu">
                    <div class="admin-menu-button">
                        <button class="site-links" id="adjustReview">Adjust Review Requirement</button>
                        <button class="site-links" id="addItem">Add Item</button>
                        <button class="site-links" id="addCategory">Add Category/Sub-category</button>
                        <button class="site-links" id="importTable">Import/Export table</button>

                    </div>
                    <%- include('components/adminMenus/adjustReviewReq') %>
                        <%- include('components/adminMenus/importTable') %>
                            <%- include('components/adminMenus/addCategorySubcategory') %>
                                <%- include('components/adminMenus/addBagItem') %>
                                    <%- include('components/adminMenus/stat-all') %>
                </div>
            </div>
            <div class="right-column">
                <%- include('components/adminMenus/recentBags') %>
            </div>
        </div>
        <script>

            const bagitem = document.getElementById('addBagItem');
            const catsub = document.getElementById('addCategoryForm');
            const adjust = document.getElementById('revreq');
            const importTable = document.getElementById('importForm');

            function showAddBagItem() {
                bagitem.classList.remove('hidden');
                importForm.classList.add('hidden');
                catsub.classList.add('hidden');
                adjust.classList.add('hidden');
            }

            function showCatSubHidden() {
                bagitem.classList.add('hidden');
                importForm.classList.add('hidden');
                adjust.classList.add('hidden');
                catsub.classList.remove('hidden');
            }

            function showRevereq() {
                bagitem.classList.add('hidden');
                catsub.classList.add('hidden');
                importForm.classList.add('hidden');
                adjust.classList.remove('hidden');
            }

            function showImportExport() {
                bagitem.classList.add('hidden');
                catsub.classList.add('hidden');
                importForm.classList.remove('hidden');
            }

            document.getElementById('addItem').addEventListener('click', function () {
                showAddBagItem();
            });

            document.getElementById('addCategory').addEventListener('click', function () {
                showCatSubHidden();
            });

            document.getElementById('adjustReview').addEventListener('click', function () {
                showRevereq();
            });

            document.getElementById('importTable').addEventListener('click', function () {
                showImportExport();
            });
        </script>
</body>

</html>